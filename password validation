password=input('Enter a valid password: ')

while True:
  if len(password)<8:
    print("Password has to have more than 7 characters")
    password=input('Enter a valid password: ')
  if str(password).isalpha()==True:
    print('Password has to contain both letters and numbers')
    password=input('Enter a valid password: ')
  if str(password).isnumeric()==True:
    print('Password has to contain both letters and numbers')
    password=input('Enter a valid password: ')
  if str(password[0]).isnumeric()==True:
    print('Password has to start with a letter')
    password=input('Enter a valid password: ')
  if not password.isalnum():
    print("The password should not contain special characters")
    password=input('Enter a valid password: ')

  else: 
    print("Your password is valid!")
    break
